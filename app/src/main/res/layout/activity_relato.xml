<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoHome"
    android:padding="5dp"
    tools:context=".RelatoActivity">

    <TextView
        android:id="@+id/tvGenerado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvHome"
        android:fontFamily="@font/milmedium"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/tvMomentoGenerado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/tvMomentoGenerado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Momento"
        android:gravity="center"
        android:fontFamily="@font/millight"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/tvUbicacionGenerado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGenerado" />

    <TextView
        android:id="@+id/tvUbicacionGenerado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicacion"
        android:gravity="center"
        android:fontFamily="@font/millight"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/tvPersonajeGenerado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMomentoGenerado" />

    <TextView
        android:id="@+id/tvPersonajeGenerado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personaje"
        android:gravity="center"
        android:fontFamily="@font/millight"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/tvAccionGenerado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUbicacionGenerado" />

    <TextView
        android:id="@+id/tvAccionGenerado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accion"
        android:gravity="center"
        android:fontFamily="@font/millight"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/tvObjetoGenerado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPersonajeGenerado" />

    <TextView
        android:id="@+id/tvObjetoGenerado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Objeto"
        android:gravity="center"
        android:fontFamily="@font/millight"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/tvDetalleGenerado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAccionGenerado" />

    <TextView
        android:id="@+id/tvDetalleGenerado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Querés compartir tu relato, sugerir una consigna o reportar un problema?"
        android:gravity="center"
        android:fontFamily="@font/milmedium"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvObjetoGenerado" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuestras Redes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvDetalleGenerado"
        app:layout_constraintStart_toStartOf="@+id/tvDetalleGenerado"
        app:layout_constraintTop_toBottomOf="@+id/tvDetalleGenerado" />
</androidx.constraintlayout.widget.ConstraintLayout>